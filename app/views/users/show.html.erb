<div class="row">
        <div class="col-lg-12 col-xl-12">
            <div class="card-box text-center">
                
                <%= image_tag 'avatar-profile.png', class: "rounded-circle",style: 'width:10%;' %>
                <h4 class="mb-0"><%= @user.first_name %> <%= @user.last_name %></h4>
                <p class="text-muted"><%= @user.role.title %></p>

                <div class="text-left mt-3">
                    <p class="text-muted mb-2 font-13"><strong>Full Name :</strong> <span class="ml-2"><%= @user.first_name %> <%= @user.last_name %></span></p>

                    <p class="text-muted mb-2 font-13"><strong>Mobile :</strong><span class="ml-2"><%= @user.phone_number %></span></p>

                    <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ml-2 "><%= @user.email %></span></p>

                    <p class="text-muted mb-1 font-13"><strong>Location :</strong> <span class="ml-2"><%= @user.home_adress %></span></p>
                    
                    <p class="text-muted mb-1 font-13"><strong>Fonction :</strong> <span class="ml-2"><%= @user.job_title %></span></p>
                </div>

                
            </div> <!-- end card-box -->
        </div>
</div>