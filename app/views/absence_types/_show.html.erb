<div class="modal fade" id="show_absence_type" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">Detail de type d'absence</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                <div class="card-box">
                    <h4 class="font-13 text-muted text-uppercase mb-2">Code :</h4>
                    <p class="mb-3"><%= @absence_type.code %></p>

                    <h4 class="font-13 text-muted text-uppercase mb-2">Absence :</h4>
                    <p class="mb-3"><%= @absence_type.name %></p>

                </div>    
            </div>

            <div class="modal-footer">
            
                <%= link_to edit_absence_type_path(@absence_type), remote: true, class: "btn btn-warning waves-effect waves-light" do %>
                    <i class="mdi mdi-border-color"></i>
                <% end %>

                <%= link_to @absence_type, method: :delete, data: { confirm: 'Etes vous sur?' }, title: "Suprimer", class: "btn btn-danger waves-effect waves-light" do %>
                    <i class="mdi mdi-delete"></i>
                <% end %>       
            </div>
      
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>



            





