<!-- Modal -->
<div class="modal fade" id="edit_absence_type" role="dialog">
    <%= simple_form_for @absence_type do |f| %>
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">Modification de type d'absence</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <%= f.input :name, label: 'Type de congé', placeholder: "Entrer le type d'absence", class: 'form-control' %>
                        </div>
                        <div class="form-group mb-3">
                            <%= f.input :code, label: 'Code de congé', placeholder: "Entrer le code de type d'absence", class: 'form-control' %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= f.button :submit, 'Valider', class: 'btn btn-raised btn-success' %>
                <button type="button" class="btn btn-raised btn-danger" data-dismiss="modal">Annuler</button>
            </div>
        </div>
      </div>
    <% end %>
</div>