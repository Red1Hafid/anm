<!--  Modal content for the Large example -->
<div class="modal fade" id="edit_certificate_request" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">Modification de la demande</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <%= simple_form_for(@certificate_request) do |f| %>
                
                <div class="modal-body">

                    <% if  ['Super Admin', 'Rh'].include? current_user.role.title %>

                      <div class="form-group mb-3">
                         <%= f.association :user, label: "Collaborateur", label_method: :email, collection: User.where.not(role_id: 1).order(created_at: :desc), value_method: :id, class: 'form-control', include_blank: false %>
                      </div>

                    <% end %>

                    <div class="form-group mb-3">
                      <%= f.association :template_attestation, label: "Type d'attestation", label_method: :name, collection: TemplateAttestation.all.order(created_at: :desc), value_method: :id, class: 'form-control', include_blank: false %>
                    </div>       
                </div>
                <div class="modal-footer">
                    <%= f.button :submit, 'Modifier', class: 'btn btn-raised btn-success' %>
                    <button type="button" class="btn btn-raised btn-warning" data-dismiss="modal">Annuler</button>
                </div>
            <% end %>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
