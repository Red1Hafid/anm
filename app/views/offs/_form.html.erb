<!-- Modal -->
<div class="modal fade" id="edit_off" role="dialog">
    <%= simple_form_for @off do |f| %>
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">Modification du jour férié</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <%= f.input :code, label: 'Code', placeholder: "Entrer le code du jour férié", class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.input :title, label: 'Jour férié', placeholder: "Entrer le nom du jour férié", class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.input :description, label: 'Déscription', placeholder: "Entrer la déscription ...", class: 'form-control' %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= f.button :submit, 'Valider', class: 'btn btn-raised btn-success' %>
                <button type="button" class="btn btn-raised btn-danger" data-dismiss="modal">Annuler</button>
            </div>
        </div>
      </div>
    <% end %>
</div>