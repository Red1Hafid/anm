<!-- Modal -->
<div class="modal fade" id="adjust_off" role="dialog">
    <%= simple_form_for(@off, as: :off, method: :post, url: adjust_path) do |f| %>
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">Adjuster le jour férié</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                             <%= f.input :start, label: 'Date de début', value: Date.today, as: :date, html5: true, class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.input :end, label: 'Date de fin', value: Date.today + 1, as: :date, html5: true, class: 'form-control' %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= f.button :submit, 'Valider', class: 'btn btn-raised btn-success' %>
                <button type="button" class="btn btn-raised btn-danger" data-dismiss="modal">Annuler</button>
            </div>
        </div>
      </div>
    <% end %>
</div>