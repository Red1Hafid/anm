<div class="modal fade" id="show_affectation" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content py-2">
      <div class="modal-header">
        <div class="d-flex align-items-center">
          <h4 class="modal-title" id="myLargeModalLabel">Show Affectation</h4>
          <% if @affectation.is_active %>
            <span class="badge badge-success ml-2">affecté</span>
          <% else %>
            <span class="badge badge-dark ml-2">Désaffectaté</span>
          <% end %>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      </div>
        <div class="modal-body mx-3">
          <div class="row border">
            <div class="col-sm-6">
              <span class="text-capitalize d-block my-1"> Nom du colaborateur: </span>
              <span class="text-capitalize d-block my-1"> Project: </span>
              <span class="text-capitalize d-block my-1"> Affectation Commentaires: </span>
              <span class="text-capitalize d-block my-1"> Date Affectation </span>
              <% if @affectation.desaffectation_comments %><span class="text-capitalize d-block my-1"> Désaffectation Commentaires:  </span><% end %>
              <% if @affectation.date_disacffectation %><span class="text-capitalize d-block my-1"> Date Désaffectation: </span> <% end %>
            </div>
            <div class="col-sm-6">
              <div class="text-capitalize d-block my-1"><%= @affectation.user.first_name %> <%= @affectation.user.last_name %></div>
              <div class="text-capitalize d-block my-1"><%= @affectation.project.name %></div>
              <div class="text-capitalize d-block my-1"><%= @affectation.comments %></div>
              <div class="text-capitalize d-block my-1"><%= @affectation.date_affectation %></div>
              <% if @affectation.desaffectation_comments %>  <div class="text-capitalize d-block my-1 "><%= @affectation.desaffectation_comments %></div> <% end %>
              <% if @affectation.date_disacffectation %><div class="text-capitalize d-block my-1"><%= @affectation.date_disacffectation %> ts</div> <% end %>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-raised btn-warning" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
</div>