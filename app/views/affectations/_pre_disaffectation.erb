<!-- Modal -->
<div class="modal fade" id="disaffectation" role="dialog">
  <%= simple_form_for(@affectation, as: :affectation, method: :post, url: disaffectation_path) do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myLargeModalLabel">Refuser ce congé</h4>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>
        <div class="modal-body">
          <div class="row">
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button :submit, 'Diesaffecter', data: { confirm: 'Etes vous sur?' }, class: 'btn btn-raised btn-success' %>
          <button type="button" class="btn btn-raised btn-danger" data-dismiss="modal">Annuler</button>
        </div>
      </div>
    </div>
  <% end %>
</div>

