<!-- Modal -->
<div class="modal fade" id="cancel_furlough" role="dialog">
    <%= simple_form_for(@furlough, as: :furlough, method: :post, url: cancel_path) do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                 <h4 class="modal-title" id="myLargeModalLabel">Annuler ce congé</h4>
                 <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12 legend">
                        <%= f.input :cancel_date, value: Date.today, as: :date, html5: true, label: "Date de demande d’annulation du congé par le collaborateur", required: true, hint: "La date d'annulation doit être mentionné" %>
                    </div>
                    <div class="form-group col-md-12 legend">
                        <%= f.input :cancel_comment, label: "Raison d'annulation", required: true, hint: "La raison d'annulation doit être informé" %>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <%= f.button :submit, "Valider l'annuler", data: { confirm: 'Etes vous sur?' }, class: 'btn btn-raised btn-success' %>
                <button type="button" class="btn btn-raised btn-danger" data-dismiss="modal">Fermer</button>
            </div>
        </div>
      </div>
    <% end %>
</div>

