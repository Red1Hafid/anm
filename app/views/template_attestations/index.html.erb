<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">
        
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="<%= root_path %>">Accueil</a></li>
                            <li class="breadcrumb-item active">Templates des documents</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Liste des templates d'attestations</h4>
                </div>
            </div>
        </div>     
        <!-- end page title --> 


          <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-3">

                             <div class="col-lg-12">  
                                <%= link_to new_template_attestation_path, class: "btn btn-secondary waves-effect waves-light mr-3" do %>
                                    <i class="mdi mdi-plus mr-1"> Nouvelle attestation</i>
                                <% end %>    
                            </div>

                        </div>

                      <table id="demo-foo-addrow" class="table table-centered table-striped table-bordered mb-0 toggle-circle" data-page-size="7">
                        <thead>
                        <tr>
                          <th data-sort-initial="true" data-toggle="true">Code attestation</th>
                          <th data-hide="phone, tablet">Attestation</th>
                          <th data-hide="phone, tablet">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                          <% @template_attestations.each do |template_attestation| %>
                          <tr>
                            <td><%= template_attestation.code %></td>
                            <td> <%= template_attestation.name %></td>
                            <td>
                              <%= link_to edit_template_attestation_path(template_attestation), title: "Modifier", class: "action-icon" do %>
                                <i class="mdi mdi-border-color"></i>
                              <% end %>
                              <%= link_to template_attestation, method: :delete, data: { confirm: 'Etes vous sur?' }, title: "Suprimer", class: "action-icon" do %>
                                <i class="mdi mdi-delete"></i>
                              <% end %>
                            </td>
                          </tr>
                        <% end %>
                        </tbody>
                        <tfoot>
                        <tr class="active">
                          <td colspan="8">
                            <div class="text-right">
                              <ul class="pagination pagination-split justify-content-end footable-pagination m-t-10"></ul>
                            </div>
                          </td>
                        </tr>
                        </tfoot>
                      </table>
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div> <!-- end col -->
        </div>
    </div>
</div> <!-- content -->

