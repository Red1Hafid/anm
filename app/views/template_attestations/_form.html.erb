<%= simple_form_for(@template_attestation) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :paragraphe_1, as: :trix_editor %>
    <%= f.input :paragraphe_2, as: :trix_editor %>
    <%= f.input :paragraphe_3, as: :trix_editor %>
    <%= f.input :footer, as: :trix_editor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sauvegarder la template", class: "btn btn-success" %>
    <%= link_to "Retour", template_attestations_path(), class: "btn btn-warning" %>
  </div>
<% end %>
