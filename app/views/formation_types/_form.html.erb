<!--  Modal content for the Large example -->
<div class="modal fade" id="edit_formation_type" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">Modification du type de formation</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <%= simple_form_for(@formation_type) do |f| %>
                
                <div class="modal-body">
                    <div class="form-group mb-3">
                      <%= f.input :code, label: "Code de Formation", class: 'form-control' %>
                    </div>   
                    <div class="form-group mb-3">
                      <%= f.input :description, label: "Type de Formation", class: 'form-control' %>
                    </div>       
                </div>
                <div class="modal-footer">
                    <%= f.button :submit, 'Modifier', class: 'btn btn-raised btn-success' %>
                    <button type="button" class="btn btn-raised btn-warning" data-dismiss="modal">Annuler</button>
                </div>
            <% end %>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

